package.name = bake
package.version = 0.1.4
package.ppa = lp:~bake-team/releases

package.files = Makefile \
                bake.doap \
                NEWS

data.man.pages = bake.1                

%release: release-tarball release-ppa

%release-tarball: release-gzip
    lp-project-upload bake $(package.version) $(gzip.release-filename)

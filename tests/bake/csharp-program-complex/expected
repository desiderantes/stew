!bake
gmcs -unsafe -out:Test.exe Test1.cs Test2.cs Test3.cs -resource:Icon.png -resource:Data.xml,data-id
mkdir -p .built
bake-gettext --domain test --mime-type text/x-csharp --output .built/Test1.cs.pot Test1.cs
bake-gettext --domain test --mime-type text/x-csharp --output .built/Test2.cs.pot Test2.cs
bake-gettext --domain test --mime-type text/x-csharp --output .built/Test3.cs.pot Test3.cs
msgcat --force-po --output-file=test.pot .built/Test1.cs.pot .built/Test2.cs.pot .built/Test3.cs.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/bin
cp Test.exe /usr/bin/Test.exe
(exit SUCCESS)
!bake uninstall
rm -f /usr/bin/Test.exe
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f Test.exe
rm -f test.pot
(exit SUCCESS)

!bake
valac --api-version
mkdir -p .built
valac --ccode test.vala
mv test.c .built/test-test.c
touch .built/test-test.c-stamp
gcc -w -Igobject -Iglib -c .built/test-test.c -o .built/test-test.o
gcc -o test .built/test-test.o -lgobject -lglib
(exit SUCCESS)
!bake install
valac --api-version
mkdir -p /usr/bin
cp test /usr/bin/test
(exit SUCCESS)
!bake uninstall
valac --api-version
rm -f /usr/bin/test
(exit SUCCESS)
!bake clean
valac --api-version
rm -rf .built/
rm -f test
(exit SUCCESS)

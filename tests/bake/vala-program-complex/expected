!bake
mkdir -p .built
valac --fast-vapi=.built/test-test2.vapi test2.vala
touch .built/test-test2.vapi-stamp
valac --fast-vapi=.built/test-test3.vapi test3.vala
touch .built/test-test3.vapi-stamp
valac --target-glib 2.32 -g --ccode test1.vala --use-fast-vapi=.built/test-test2.vapi --use-fast-vapi=.built/test-test3.vapi
mv test1.c .built/test-test1.c
touch .built/test-test1.c-stamp
gcc -w -DFOO=1 -g -Igobject -Iglib -c .built/test-test1.c -o .built/test-test1.o
valac --fast-vapi=.built/test-test1.vapi test1.vala
touch .built/test-test1.vapi-stamp
valac --target-glib 2.32 -g --ccode test2.vala --use-fast-vapi=.built/test-test1.vapi --use-fast-vapi=.built/test-test3.vapi
mv test2.c .built/test-test2.c
touch .built/test-test2.c-stamp
gcc -w -DFOO=1 -g -Igobject -Iglib -c .built/test-test2.c -o .built/test-test2.o
valac --target-glib 2.32 -g --ccode test3.vala --use-fast-vapi=.built/test-test1.vapi --use-fast-vapi=.built/test-test2.vapi
mv test3.c .built/test-test3.c
touch .built/test-test3.c-stamp
gcc -w -DFOO=1 -g -Igobject -Iglib -c .built/test-test3.c -o .built/test-test3.o
gcc -o test .built/test-test1.o .built/test-test2.o .built/test-test3.o -lm -lgobject -lglib
bake-gettext --mime-type text/x-vala --output .built/test1.vala.pot test1.vala
bake-gettext --mime-type text/x-vala --output .built/test2.vala.pot test2.vala
bake-gettext --mime-type text/x-vala --output .built/test3.vala.pot test3.vala
msgcat --force-po --output-file=test.pot .built/test1.vala.pot .built/test2.vala.pot .built/test3.vala.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/bin
cp test /usr/bin/test
(exit SUCCESS)
!bake uninstall
rm -f /usr/bin/test
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f test
rm -f test.pot
(exit SUCCESS)

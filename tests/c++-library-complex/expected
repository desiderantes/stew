!bake
mkdir -p .built
g++ -fPIC -MMD -MF .built/test1.d -c test1.cpp -o .built/test1.o
g++ -fPIC -MMD -MF .built/test2.d -c test2.cpp -o .built/test2.o
g++ -fPIC -MMD -MF .built/test3.d -c test3.cpp -o .built/test3.o
g++ -o libtest.so.0 -shared .built/test1.o .built/test2.o .built/test3.o
bake-gettext --language C++ --output .built/test1.cpp.pot test1.cpp
bake-gettext --language C++ --output .built/test2.cpp.pot test2.cpp
bake-gettext --language C++ --output .built/test3.cpp.pot test3.cpp
msgcat --force-po --output-file=test.pot .built/test1.cpp.pot .built/test2.cpp.pot .built/test3.cpp.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/local/lib
cp libtest.so.0 /usr/local/lib/libtest.so.0
cp libtest.so /usr/local/lib/libtest.so
mkdir -p /usr/local/include/test-0
cp test.h /usr/local/include/test-0/test.h
mkdir -p /usr/local/lib/pkgconfig
cp test-0.pc /usr/local/lib/pkgconfig/test-0.pc
(exit SUCCESS)
!bake clean
rm -f libtest.so.0
rm -rf .built/
rm -f test.pot
rm -f libtest.so
rm -f test-0.pc
(exit SUCCESS)

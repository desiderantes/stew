!bake
mkdir -p .built
g++ -fPIC -MMD -MF .built/testlib-test.d -c test.cpp -o .built/testlib-test.o
g++ -o libtestlib.so.0 -shared .built/testlib-test.o
ar -cq libtestlib.a .built/testlib-test.o
g++ -MMD -MF .built/test-main.d -c main.cpp -o .built/test-main.o
g++ -o test .built/test-main.o -L. -ltestlib
(exit SUCCESS)
!bake install
mkdir -p /usr/bin
cp test /usr/bin/test
(exit SUCCESS)
!bake uninstall
rm -f /usr/bin/test
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f libtestlib.so.0
rm -f libtestlib.a
rm -f libtestlib.so
rm -f test
(exit SUCCESS)

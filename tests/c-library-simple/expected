!bake
mkdir -p .built
gcc -fPIC -MMD -MF .built/test.d -c test.c -o .built/test.o
gcc -o libtest.so.0 -shared .built/test.o
(exit SUCCESS)
!bake install
mkdir -p /usr/lib
cp libtest.so.0 /usr/lib/libtest.so.0
cp libtest.so /usr/lib/libtest.so
mkdir -p /usr/lib/pkgconfig
cp test-0.pc /usr/lib/pkgconfig/test-0.pc
(exit SUCCESS)
!bake uninstall
rm -f /usr/lib/libtest.so.0
rm -f /usr/lib/libtest.so
rm -f /usr/lib/pkgconfig/test-0.pc
(exit SUCCESS)
!bake clean
rm -f libtest.so.0
rm -rf .built/
rm -f libtest.so
rm -f test-0.pc
(exit SUCCESS)

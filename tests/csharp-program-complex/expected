!bake
gmcs -out:test.exe test1.cs test2.cs test3.cs
mkdir -p .built
bake-gettext --language C# --output .built/test1.cs.po test1.cs
bake-gettext --language C# --output .built/test2.cs.po test2.cs
bake-gettext --language C# --output .built/test3.cs.po test3.cs
msgcat --force-po --output-file=test.pot .built/test1.cs.po .built/test2.cs.po .built/test3.cs.po
(exit SUCCESS)
!bake install
mkdir -p /usr/local/share/test
install test.exe /usr/local/share/test/test.exe
mkdir -p /usr/local/bin
install .built/test /usr/local/bin/test
(exit SUCCESS)
!bake clean
rm -f test.exe
rm -rf .built/
rm -f test.pot
rm -f test
(exit SUCCESS)

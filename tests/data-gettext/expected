!bake
mkdir -p .built
msgfmt de.po --output-file=.built/de.mo
msgfmt fr.po --output-file=.built/fr.mo
msgfmt it.po --output-file=.built/it.mo
(exit SUCCESS)
!bake install
mkdir -p /usr/local/share/locale/de/LC_MESSAGES
cp .built/de.mo /usr/local/share/locale/de/LC_MESSAGES/test.mo
mkdir -p /usr/local/share/locale/fr/LC_MESSAGES
cp .built/fr.mo /usr/local/share/locale/fr/LC_MESSAGES/test.mo
mkdir -p /usr/local/share/locale/it/LC_MESSAGES
cp .built/it.mo /usr/local/share/locale/it/LC_MESSAGES/test.mo
(exit SUCCESS)
!bake clean
rm -rf .built/
(exit SUCCESS)

!bake
mkdir -p .built
msgfmt fr.po --output-file=.built/fr.mo
msgfmt it.po --output-file=.built/it.mo
itstool --output .built/index.page.pot index.page
itstool --output .built/test.page.pot test.page
msgcat --force-po --output-file=test.pot .built/index.page.pot .built/test.page.pot
itstool -m .built/fr.mo --output .built/index.page.fr index.page
itstool -m .built/it.mo --output .built/index.page.it index.page
itstool -m .built/fr.mo --output .built/test.page.fr test.page
itstool -m .built/it.mo --output .built/test.page.it test.page
(exit SUCCESS)
!bake install
mkdir -p /usr/local/share/help/fr/test
cp .built/index.page.fr /usr/local/share/help/fr/test/index.page
mkdir -p /usr/local/share/help/it/test
cp .built/index.page.it /usr/local/share/help/it/test/index.page
mkdir -p /usr/local/share/help/C/test
cp index.page /usr/local/share/help/C/test/index.page
cp .built/test.page.fr /usr/local/share/help/fr/test/test.page
cp .built/test.page.it /usr/local/share/help/it/test/test.page
cp test.page /usr/local/share/help/C/test/test.page
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f test.pot
(exit SUCCESS)

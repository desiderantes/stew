!bake
mkdir -p .built/com/example
javac -d .built com/example/Test1.java com/example/Test2.java com/example/Test3.java
jar cfe test.jar -C .built com/example/Test1.class com/example/Test2.class com/example/Test3.class
bake-gettext --mime-type text/x-java --output .built/com/example/Test1.java.pot com/example/Test1.java
bake-gettext --mime-type text/x-java --output .built/com/example/Test2.java.pot com/example/Test2.java
bake-gettext --mime-type text/x-java --output .built/com/example/Test3.java.pot com/example/Test3.java
msgcat --force-po --output-file=test.pot .built/com/example/Test1.java.pot .built/com/example/Test2.java.pot .built/com/example/Test3.java.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/share/java
cp test.jar /usr/share/java/test.jar
(exit SUCCESS)
!bake clean
rm -f test.jar
# FIXME: Not necessary - is within the .built/ dir (should be completely removed)
rm -rf .built/com/example/
rm -f test.pot
(exit SUCCESS)

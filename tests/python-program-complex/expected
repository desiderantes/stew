!bake
python2.7 -m py_compile test1.py
python2.7 -m py_compile test2.py
python2.7 -m py_compile test3.py
mkdir -p .built
bake-gettext --mime-type text/x-python --output .built/test1.py.pot test1.py
bake-gettext --mime-type text/x-python --output .built/test2.py.pot test2.py
bake-gettext --mime-type text/x-python --output .built/test3.py.pot test3.py
msgcat --force-po --output-file=test.pot .built/test1.py.pot .built/test2.py.pot .built/test3.py.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/local/share/test
cp test1.pyc /usr/local/share/test/test1.pyc
cp test2.pyc /usr/local/share/test/test2.pyc
cp test3.pyc /usr/local/share/test/test3.pyc
mkdir -p /usr/local/bin
cp .built/test /usr/local/bin/test
(exit SUCCESS)
!bake clean
rm -f test1.pyc
rm -f test2.pyc
rm -f test3.pyc
rm -rf .built/
rm -f test.pot
rm -f test
(exit SUCCESS)

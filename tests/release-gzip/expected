!bake release-gzip
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
mkdir -p .built
mkdir -p .built/test-1.0
cp Recipe .built/test-1.0/Recipe
tar --create --gzip --file test-1.0.tar.gz --directory .built test-1.0
(exit SUCCESS)
!bake install
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake uninstall
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake clean
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
rm -f test-1.0.tar.gz
rm -rf .built/
(exit SUCCESS)

!bake release-ppa
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
mkdir -p .built
mkdir -p .built/test-1.0
cp Recipe .built/test-1.0/Recipe
tar --create --gzip --file test-1.0.tar.gz --directory .built test-1.0
cp test-1.0.tar.gz test_1.0.orig.tar.gz
rm -rf .built/dpkg-builddir
mkdir -p .built/dpkg-builddir/debian
mkdir -p .built/dpkg-builddir/debian/source
tar --create --gzip --file test_1.0-0.debian.tar.gz --directory .built/dpkg-builddir debian
rm -rf .built/dpkg-builddir
rm -rf .built/dpkg-builddir
mkdir -p .built/dpkg-builddir
cp test_1.0.orig.tar.gz test_1.0-0.debian.tar.gz .built/dpkg-builddir
tar --extract --gzip --file test_1.0.orig.tar.gz --directory .built/dpkg-builddir
tar --extract --gzip --file test_1.0-0.debian.tar.gz --directory .built/dpkg-builddir/test-1.0
dpkg-buildpackage -S
mv .built/dpkg-builddir/test_1.0-0.dsc .built/dpkg-builddir/test_1.0-0_source.changes .
rm -rf .built/dpkg-builddir
dput ppa:lp:~test/releases test_1.0-0_source.changes
(exit SUCCESS)
!bake install
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake uninstall
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake clean
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
rm -f test_1.0.orig.tar.gz
rm -f test_1.0-0.debian.tar.gz
rm -f test_1.0-0.dsc
rm -f test_1.0-0_source.changes
rm -f test-1.0.tar.gz
rm -rf .built/
(exit SUCCESS)

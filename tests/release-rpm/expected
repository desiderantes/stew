!bake release-rpm
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
mkdir -p test-1.0
cp Recipe test-1.0/Recipe
tar --create --gzip --file test-1.0.tar.gz test-1.0
rm -rf .bake-rpm-builddir
mkdir .bake-rpm-builddir
tar --extract --gzip --file ../test-1.0.tar.gz
tar --create --gzip --file ../test.rpm.tar.gz test-1.0
rpmbuild -tb test.rpm.tar.gz
cp /home/bob/rpmbuild/RPMS/x86_64/test-1.0-1.x86_64.rpm .
rm -f test.rpm.tar.gz
rm -rf .bake-rpm-builddir
(exit 0)

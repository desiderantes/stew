!bake release-rpm
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
mkdir -p .built
mkdir -p .built/test-1.0
cp Recipe .built/test-1.0/Recipe
tar --create --gzip --file test-1.0.tar.gz --directory .built test-1.0
rm -rf .built/rpm-builddir
mkdir .built/rpm-builddir
tar --extract --gzip --file test-1.0.tar.gz --directory .built/rpm-builddir
tar --create --gzip --file test.rpm.tar.gz .built/rpm-builddir/test-1.0
rpmbuild -tb test.rpm.tar.gz
^cp .*/rpmbuild/RPMS/x86_64/test-1.0-1.x86_64.rpm \.
rm -f test.rpm.tar.gz
rm -rf .built/rpm-builddir
(exit SUCCESS)
!bake install
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake uninstall
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
(exit SUCCESS)
!bake clean
dpkg-architecture -qDEB_BUILD_ARCH
rpmbuild --showrc
rm -f test-1.0.tar.gz
rm -rf .built/
rm -f test-1.0-1.x86_64.rpm
(exit SUCCESS)

!bake
mkdir -p .built
valac --fast-vapi=.built/test-test2.vapi test2.vala
touch .built/test-test2.vapi-stamp
valac --fast-vapi=.built/test-test3.vapi test3.vala
touch .built/test-test3.vapi-stamp
valac --target-glib 2.32 --define=TEST -g --ccode test1.vala --use-fast-vapi=.built/test-test2.vapi --use-fast-vapi=.built/test-test3.vapi
mv test1.c .built/test-test1.c
touch .built/test-test1.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -DFOO=1 -g -Igobject -Iglib -c .built/test-test1.c -o .built/test-test1.o
valac --fast-vapi=.built/test-test1.vapi test1.vala
touch .built/test-test1.vapi-stamp
valac --target-glib 2.32 --define=TEST -g --ccode test2.vala --use-fast-vapi=.built/test-test1.vapi --use-fast-vapi=.built/test-test3.vapi
mv test2.c .built/test-test2.c
touch .built/test-test2.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -DFOO=1 -g -Igobject -Iglib -c .built/test-test2.c -o .built/test-test2.o
valac --target-glib 2.32 --define=TEST -g --ccode test3.vala --use-fast-vapi=.built/test-test1.vapi --use-fast-vapi=.built/test-test2.vapi
mv test3.c .built/test-test3.c
touch .built/test-test3.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -DFOO=1 -g -Igobject -Iglib -c .built/test-test3.c -o .built/test-test3.o
gcc -o libtest.so.0 -shared .built/test-test1.o .built/test-test2.o .built/test-test3.o -lm -lgobject -lglib
ar -cq libtest.a .built/test-test1.o .built/test-test2.o .built/test-test3.o
valac --target-glib 2.32 --define=TEST -g --ccode --header=test.h --vapi=test-0.vapi --library=test --use-fast-vapi=.built/test-test1.vapi --use-fast-vapi=.built/test-test2.vapi --use-fast-vapi=.built/test-test3.vapi
bake-gettext --mime-type text/x-vala --output .built/test1.vala.pot test1.vala
bake-gettext --mime-type text/x-vala --output .built/test2.vala.pot test2.vala
bake-gettext --mime-type text/x-vala --output .built/test3.vala.pot test3.vala
msgcat --force-po --output-file=test.pot .built/test1.vala.pot .built/test2.vala.pot .built/test3.vala.pot
(exit SUCCESS)
!bake install
mkdir -p /usr/lib
cp libtest.so /usr/lib/libtest.so
cp libtest.so.0 /usr/lib/libtest.so.0
cp libtest.a /usr/lib/libtest.a
mkdir -p /usr/include/test-0
cp test.h /usr/include/test-0/test.h
mkdir -p /usr/share/vala/vapi
cp test-0.vapi /usr/share/vala/vapi/test-0.vapi
(exit SUCCESS)
!bake uninstall
rm -f /usr/lib/libtest.so
rm -f /usr/lib/libtest.so.0
rm -f /usr/lib/libtest.a
rm -f /usr/include/test-0/test.h
rm -f /usr/share/vala/vapi/test-0.vapi
(exit SUCCESS)
!bake clean
rm -f libtest.so.0
rm -f libtest.a
rm -f test.h
rm -f test-0.vapi
rm -rf .built/
rm -f libtest.so
rm -f test.pot
(exit SUCCESS)

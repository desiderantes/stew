!bake
mkdir -p .built
valac --ccode test.vala
mv test.c .built/test-test.c
touch .built/test-test.c-stamp
gcc -w -fPIC -Igobject -Iglib -c .built/test-test.c -o .built/test-test.o
gcc -o libtest.so -shared .built/test-test.o -lgobject -lglib
ar -cq libtest.a .built/test-test.o
valac --fast-vapi=.built/test-test.vapi test.vala
touch .built/test-test.vapi-stamp
valac --ccode --header=test.h --vapi=test.vapi --library=test --gir=Test-0.gir --use-fast-vapi=.built/test-test.vapi
g-ir-compiler --shared-library=libtest.so Test-0.gir -o Test-0.typelib
(exit SUCCESS)
!bake install
mkdir -p /usr/lib
cp libtest.so /usr/lib/libtest.so
cp libtest.a /usr/lib/libtest.a
mkdir -p /usr/include
cp test.h /usr/include/test.h
mkdir -p /usr/share/vala/vapi
cp test.vapi /usr/share/vala/vapi/test.vapi
mkdir -p /usr/share/gir-1.0
cp Test-0.gir /usr/share/gir-1.0/Test-0.gir
mkdir -p /usr/lib/girepository-1.0
cp Test-0.typelib /usr/lib/girepository-1.0/Test-0.typelib
(exit SUCCESS)
!bake uninstall
rm -f /usr/lib/libtest.so
rm -f /usr/lib/libtest.a
rm -f /usr/include/test.h
rm -f /usr/share/vala/vapi/test.vapi
rm -f /usr/share/gir-1.0/Test-0.gir
rm -f /usr/lib/girepository-1.0/Test-0.typelib
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f libtest.so
rm -f libtest.a
rm -f test.h
rm -f test.vapi
rm -f Test-0.gir
rm -f Test-0.typelib
(exit SUCCESS)

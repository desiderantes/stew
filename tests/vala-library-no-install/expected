!bake
mkdir -p .built
valac --ccode test.vala
mv test.c .built/test-test.c
touch .built/test-test.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -Igobject -Iglib -c .built/test-test.c -o .built/test-test.o
gcc -o libtest.so -shared .built/test-test.o -lgobject -lglib
ar -cq libtest.a .built/test-test.o
valac --fast-vapi=.built/test-test.vapi test.vala
touch .built/test-test.vapi-stamp
valac --ccode --header=test.h --vapi=test.vapi --library=test --use-fast-vapi=.built/test-test.vapi
(exit SUCCESS)
!bake install
(exit SUCCESS)
!bake uninstall
(exit SUCCESS)
!bake clean
rm -rf .built/
rm -f libtest.so
rm -f libtest.a
rm -f test.h
rm -f test.vapi
(exit SUCCESS)

!bake
mkdir -p .built
valac --fast-vapi=.built/test1-shared.vapi shared.vala
touch .built/test1-shared.vapi-stamp
valac --ccode test1.vala --use-fast-vapi=.built/test1-shared.vapi
mv test1.c .built/test1-test1.c
touch .built/test1-test1.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -Igobject -Iglib -c .built/test1-test1.c -o .built/test1-test1.o
valac --fast-vapi=.built/test1-test1.vapi test1.vala
touch .built/test1-test1.vapi-stamp
valac --ccode shared.vala --use-fast-vapi=.built/test1-test1.vapi
mv shared.c .built/test1-shared.c
touch .built/test1-shared.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -Igobject -Iglib -c .built/test1-shared.c -o .built/test1-shared.o
gcc -o libtest1.so.0 -shared .built/test1-test1.o .built/test1-shared.o -lgobject -lglib
ar -cq libtest1.a .built/test1-test1.o .built/test1-shared.o
valac --ccode --header=test1.h --vapi=test1-0.vapi --library=test1 --use-fast-vapi=.built/test1-test1.vapi --use-fast-vapi=.built/test1-shared.vapi
valac --fast-vapi=.built/test2-shared.vapi shared.vala
touch .built/test2-shared.vapi-stamp
valac --ccode test2.vala --use-fast-vapi=.built/test2-shared.vapi
mv test2.c .built/test2-test2.c
touch .built/test2-test2.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -Igobject -Iglib -c .built/test2-test2.c -o .built/test2-test2.o
valac --fast-vapi=.built/test2-test2.vapi test2.vala
touch .built/test2-test2.vapi-stamp
valac --ccode shared.vala --use-fast-vapi=.built/test2-test2.vapi
mv shared.c .built/test2-shared.c
touch .built/test2-shared.c-stamp
gcc -Wno-unused -Wno-deprecated-declarations -fPIC -Igobject -Iglib -c .built/test2-shared.c -o .built/test2-shared.o
gcc -o libtest2.so.0 -shared .built/test2-test2.o .built/test2-shared.o -lgobject -lglib
ar -cq libtest2.a .built/test2-test2.o .built/test2-shared.o
valac --ccode --header=test2.h --vapi=test2-0.vapi --library=test2 --use-fast-vapi=.built/test2-test2.vapi --use-fast-vapi=.built/test2-shared.vapi
(exit SUCCESS)
!bake install
mkdir -p /usr/lib
cp libtest1.so /usr/lib/libtest1.so
cp libtest1.so.0 /usr/lib/libtest1.so.0
cp libtest1.a /usr/lib/libtest1.a
mkdir -p /usr/include/test1-0
cp test1.h /usr/include/test1-0/test1.h
mkdir -p /usr/share/vala/vapi
cp test1-0.vapi /usr/share/vala/vapi/test1-0.vapi
cp libtest2.so /usr/lib/libtest2.so
cp libtest2.so.0 /usr/lib/libtest2.so.0
cp libtest2.a /usr/lib/libtest2.a
mkdir -p /usr/include/test2-0
cp test2.h /usr/include/test2-0/test2.h
cp test2-0.vapi /usr/share/vala/vapi/test2-0.vapi
(exit SUCCESS)
!bake uninstall
rm -f /usr/lib/libtest1.so
rm -f /usr/lib/libtest1.so.0
rm -f /usr/lib/libtest1.a
rm -f /usr/include/test1-0/test1.h
rm -f /usr/share/vala/vapi/test1-0.vapi
rm -f /usr/lib/libtest2.so
rm -f /usr/lib/libtest2.so.0
rm -f /usr/lib/libtest2.a
rm -f /usr/include/test2-0/test2.h
rm -f /usr/share/vala/vapi/test2-0.vapi
(exit SUCCESS)
!bake clean
rm -f libtest1.so.0
rm -f libtest1.a
rm -f test1.h
rm -f test1-0.vapi
rm -rf .built/
rm -f libtest1.so
rm -f libtest2.so.0
rm -f libtest2.a
rm -f test2.h
rm -f test2-0.vapi
rm -f libtest2.so
(exit SUCCESS)

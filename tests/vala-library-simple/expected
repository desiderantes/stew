!bake
mkdir -p .built
valac --ccode test.vala
touch .built/test.c-stamp
gcc -Wno-unused -fPIC -c .built/test.c -o .built/test.o
gcc -o libtest.so.0 -shared .built/test.o
valac --fast-vapi=.built/test.vapi test.vala
touch .built/test.vapi-stamp
valac --ccode --header=test.h --vapi=test-0.vapi --library=test --use-fast-vapi=.built/test.vapi
(exit SUCCESS)
!bake install
mkdir -p /usr/local/lib
cp libtest.so /usr/local/lib/libtest.so
cp libtest.so.0 /usr/local/lib/libtest.so.0
mkdir -p /usr/local/lib/pkgconfig
cp test-0.pc /usr/local/lib/pkgconfig/test-0.pc
mkdir -p /usr/local/include/test-0
cp test.h /usr/local/include/test-0/test.h
mkdir -p /usr/local/share/vala/vapi
cp test-0.vapi /usr/local/share/vala/vapi/test-0.vapi
(exit SUCCESS)
!bake clean
rm -f libtest.so.0
rm -f test.h
rm -f test-0.vapi
rm -rf .built/
rm -f libtest.so
rm -f test-0.pc
(exit SUCCESS)

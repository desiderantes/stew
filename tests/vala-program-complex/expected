!bake
mkdir -p .built
valac --fast-vapi=.built/test2.vapi test2.vala
touch .built/test2.vapi-stamp
valac --fast-vapi=.built/test3.vapi test3.vala
touch .built/test3.vapi-stamp
valac --target-glib 2.32 --ccode test1.vala --use-fast-vapi=.built/test2.vapi --use-fast-vapi=.built/test3.vapi
touch .built/test1.c-stamp
gcc -Wno-unused -DFOO=1 -c .built/test1.c -o .built/test1.o
valac --fast-vapi=.built/test1.vapi test1.vala
touch .built/test1.vapi-stamp
valac --target-glib 2.32 --ccode test2.vala --use-fast-vapi=.built/test1.vapi --use-fast-vapi=.built/test3.vapi
touch .built/test2.c-stamp
gcc -Wno-unused -DFOO=1 -c .built/test2.c -o .built/test2.o
valac --target-glib 2.32 --ccode test3.vala --use-fast-vapi=.built/test1.vapi --use-fast-vapi=.built/test2.vapi
touch .built/test3.c-stamp
gcc -Wno-unused -DFOO=1 -c .built/test3.c -o .built/test3.o
gcc -o test .built/test1.o .built/test2.o .built/test3.o -lm
bake-gettext --language Vala --output .built/test1.vala.po test1.vala
bake-gettext --language Vala --output .built/test2.vala.po test2.vala
bake-gettext --language Vala --output .built/test3.vala.po test3.vala
msgcat --force-po --output-file=test.pot .built/test1.vala.po .built/test2.vala.po .built/test3.vala.po
(exit SUCCESS)
!bake install
mkdir -p /usr/local/bin
install test /usr/local/bin/test
(exit SUCCESS)
!bake clean
rm -f test
rm -rf .built/
rm -f test.pot
(exit SUCCESS)
